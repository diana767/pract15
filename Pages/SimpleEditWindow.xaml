<Window x:Class="Pract15.Windows.SimpleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:validators="clr-namespace:Pract15.ValidationRules"
        Title="SimpleEditWindow"
        Width="400"
        Height="280"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Добавить"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryTextBrush}"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <TextBlock x:Name="LabelText"
                   Grid.Row="1"
                   FontSize="14"
                   Foreground="{StaticResource SecondaryTextBrush}"
                   Margin="0,0,0,5"/>

        <TextBox x:Name="ValueTextBox"
                 Grid.Row="2"
                 Height="35"
                 materialDesign:HintAssist.Hint="Введите значение">
            <TextBox.Text>
                <Binding Path="Value" 
                         UpdateSourceTrigger="PropertyChanged"
                         Mode="TwoWay">
                    <Binding.ValidationRules>
                        <validators:RequiredValidationRule ValidatesOnTargetUpdated="True"/>
                        <validators:MinLengthValidationRule MinLength="2" ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBlock Grid.Row="2"
                   Style="{StaticResource ValidationErrorTextBlock}"
                   Text="{Binding ElementName=ValueTextBox, Path=(Validation.Errors)[0].ErrorContent}"
                   Margin="0,40,0,0"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Отмена"
                    Style="{StaticResource SecondaryButton}"
                    Click="Cancel_Click"
                    Margin="0,0,10,0"
                    Width="100"/>
            <Button Content="Сохранить"
                    Style="{StaticResource PrimaryButton}"
                    Click="Save_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>